<%= simple_form_for @restaurant, :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.input :name %>
  <%= error_span(@restaurant[:name]) %>
  <%= f.input :address %>
  <%= error_span(@restaurant[:address]) %>
  <%= f.input :tag %>
  <%= error_span(@restaurant[:tag]) %>
  <%= f.input :zipcode %>
  <%= error_span(@restaurant[:zipcode]) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn btn-default' %>
<% end %>
