<%- model_class = Restaurant -%>
<div class="jumbotron">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped restaurant-list">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:tag) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.id, restaurant_path(restaurant) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.tag %></td>
        <td><%=l restaurant.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_path(restaurant), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_path(restaurant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="margin-left: 150px;">
  <%= link_to "Add a restaurant",
    new_restaurant_path,
    :class => 'btn btn-primary add-new-button' %>

  <%= link_to "Search for restaurant in Yelp",
    searchyelp_restaurants_path,
    :class => 'btn btn-primary add-new-button' %>
</div>

<form action = "/restaurants/searchyelp" >
       <input class="input-small" type="text" name="text1" placeholder="Restaurant">
       <br>
       <button type="Submit" class='btn btn-primary add-new-button'>Search Yelp!</button>
</form>
